{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "system",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
    "exclude": [
        "node_modules",
        "demo",
        "bundles",
        "components",
        "directives",
        "src/test",
        "**/*.spec.ts"
    ],
    "include": [
        "./src/**/*"
    ]
}
